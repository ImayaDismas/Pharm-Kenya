<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/dynalogo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="620px"
                android:layout_height="wrap_content"
                android:id="@+id/email_input_layout"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageView3">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:id="@+id/editText"
                    android:layout_below="@+id/imageView3"
                    android:hint="Email Address"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:paddingLeft="20dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/edit_fields_shape"
                    android:height="86px"
                    android:textSize="35px"
                    android:width="620px"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="620px"
                android:layout_height="wrap_content"
                android:id="@+id/pass_input_layout"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/email_input_layout"
                android:layout_marginTop="20dp">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText2"
                    android:layout_centerHorizontal="true"
                    android:hint="Password (at least 6 characters)"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edit_fields_shape"
                    android:height="86px"
                    android:textSize="35px"
                    android:width="620px"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/i_accept_dynapharm_terms_and_conditions"
                android:id="@+id/textView3"
                android:textColor="@color/tab_color"
                android:textSize="35px"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/pass_input_layout"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:hint="Sign Up"
                android:id="@+id/button"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundshapebtn"
                android:focusableInTouchMode="false"
                android:textSize="35px"
                android:textColorHint="@color/white"
                android:width="420px"
                android:textColor="@color/white"
                android:height="88px" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>